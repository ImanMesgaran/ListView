    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Height="50">

    <ViewCell.View>
        <Label VerticalOptions="CenterAndExpand">
            <!--  LineBreakMode="WordWrap"  -->
            <Label.FormattedText>
                <FormattedString>
                    <Span
                        FontAttributes="Bold"
                        FontSize="Large"
                        Text="ICON -- "
                        TextColor="Crimson" />

                    <Span Text="UnRead News" TextColor="CornflowerBlue" />

                </FormattedString>
            </Label.FormattedText>
        </Label>

    </ViewCell.View>
</ViewCell>